@{
    ViewData["Title"] = "Nạp Xu";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="mb-4 text-center">Nạp Xu</h2>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        <div class="alert alert-info text-center fw-bold">
            <i class="bi bi-info-circle"></i> 1 Xu tương đương với 1.000 VNĐ
        </div>

        <form asp-controller="auths" asp-action="TopUpCoints" method="post">
            <div class="mb-3 text-center">
                <label class="form-label fw-semibold">Chọn số Xu muốn nạp:</label>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="points" id="xu50" value="50">
                        <label class="form-check-label" for="xu50">50 Xu</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="points" id="xu100" value="100">
                        <label class="form-check-label" for="xu100">100 Xu</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="points" id="xu200" value="200">
                        <label class="form-check-label" for="xu200">200 Xu</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="points" id="xu500" value="500">
                        <label class="form-check-label" for="xu500">500 Xu</label>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary btnhover px-4">
                    Nạp Xu
                </button>
            </div>
        </form>
    </div>
</div>