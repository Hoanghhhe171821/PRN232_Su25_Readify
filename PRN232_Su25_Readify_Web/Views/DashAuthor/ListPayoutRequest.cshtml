@model PRN232_Su25_Readify_Web.Dtos.PagedResults<PRN232_Su25_Readify_Web.Dtos.DashboardAuthor.RoyaltyRequestDto>

@{
    ViewData["Title"] = "Yêu cầu rút tiền";
    Layout = "~/Views/Shared/_PartialAuthor.cshtml";
}

<h2 class="mb-4">Danh sách yêu cầu rút tiền</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Số tiền yêu cầu</th>
            <th>Số tiền duyệt</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.RequestAmount.ToString("N0") VNĐ</td>
                <td>@item.ApprovedAmount.ToString("N0") VNĐ</td>
                <td>
                    @switch (item.Status)
                    {
                        case "Pending":
                            <span class="badge bg-warning text-dark">Chờ duyệt</span>
                            break;
                        case "Approved":
                            <span class="badge bg-success">Đã duyệt</span>
                            break;
                        case "Rejected":
                            <span class="badge bg-danger">Từ chối</span>
                            break;
                        default:
                            <span class="badge bg-secondary">@item.Status</span>
                            break;
                    }
                </td>
                <td>@item.CreateDate.ToString("dd/MM/yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<div class="row">
    <div class="col-lg-12 text-center">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("ListPayoutRequest", new { pageIndex = Model.CurrentPage - 1, pageSize = Model.PageSize })">«</a>
                    </li>
                }
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("ListPayoutRequest", new { pageIndex = i, pageSize = Model.PageSize })">@i</a>
                    </li>
                }
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("ListPayoutRequest", new { pageIndex = Model.CurrentPage + 1, pageSize = Model.PageSize })">»</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>