@model PRN232_Su25_Readify_Web.Dtos.PagedResults<PRN232_Su25_Readify_Web.Dtos.Order.OrderDto>
@{
    ViewData["Title"] = "Lịch sử đơn hàng";
    Layout = "~/Views/Shared/_PartialLayout.cshtml";
}

<h2>Danh sách đơn hàng</h2>

<form method="get" asp-controller="Orders" asp-action="AdminOrder" class="mb-4">
    <div class="input-group">
        <input type="text"
               name="keyword"
               value="@ViewBag.Keyword"
               class="form-control"
               placeholder="Tìm theo email..." />

        <button class="btn btn-primary" type="submit">Tìm</button>
    </div>
</form>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Mã đơn</th>
            <th>User</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Ngày tạo</th>
        </tr>
    </thead>
    @if (Model.Items != null && Model.Items.Any())
    {
        foreach (var order in Model.Items)
        {
            <tr>
                <td>
                    <a asp-action="OrderItemsAdmin" asp-route-id="@order.Id" class="text-decoration-none text-primary fw-bold">
                        @order.Id
                    </a>
                </td>
                <td>@order.UserEmail</td>
                <td>@($"{order.TotalAmount:N0} đ")</td>
                <td>
                    <span class="badge @(order.Status == "Completed" ? "bg-success" : "bg-warning")">
                        @order.Status
                    </span>
                </td>
                <td>@order.CreateDate</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5" class="text-center">Không có đơn hàng nào</td>
        </tr>
    }

</table>

<!-- Pagination -->
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link"
                   href="@Url.Action("AdminOrder", new { pageIndex = Model.CurrentPage - 1, pageSize = Model.PageSize, keyword = ViewBag.Keyword })">«</a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link"
                   href="@Url.Action("AdminOrder", new { pageIndex = i, pageSize = Model.PageSize, keyword = ViewBag.Keyword })">@i</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link"
                   href="@Url.Action("AdminOrder", new { pageIndex = Model.CurrentPage + 1, pageSize = Model.PageSize, keyword = ViewBag.Keyword })">»</a>
            </li>
        }
    </ul>
</nav>
