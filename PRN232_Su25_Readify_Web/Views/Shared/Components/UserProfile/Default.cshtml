@model PRN232_Su25_Readify_Web.Models.Account.ProfileViewModel

@if (Model != null)
{
    <li class="nav-item dropdown profile-dropdown ms-4">
        <a class="nav-link" href="javascript:void(0);" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="@(!string.IsNullOrEmpty(Model.AvatarUrl) ? Model.AvatarUrl : "/images/profile1.jpg")"
                 class="rounded-circle" width="40" height="40" />
            <div class="profile-info">
                <h6 class="title">@Model.UserName</h6>
                <span>@Model.Email</span>
                <span id="userPoints">Points: @Model.Points</span>
            </div>
        </a>
        <div class="dropdown-menu py-0 dropdown-menu-end">
            <div class="dropdown-header">
                <h6 class="m-0">@Model.UserName</h6>
                <span>@Model.Email</span>
            </div>
            <div class="dropdown-body">
                <a asp-controller="Profile" asp-action="Index" class="dropdown-item d-flex justify-content-between align-items-center ai-icon">
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" height="20px" viewBox="0 0 24 24" width="20px" fill="#000000">
                            <path d="M0 0h24v24H0V0z" fill="none" />
                            <path d="M12 12c2.7 0 5-2.3 5-5s-2.3-5-5-5-5 2.3-5 5 2.3 5 5 5zm0 2c-3.33 0-10 1.67-10 5v3h20v-3c0-3.33-6.67-5-10-5z" />
                        </svg>
                        <span class="ms-2">My Profile</span>
                    </div>
                </a>
                <a asp-controller="auths" asp-action="HistoryTopUp" class="dropdown-item d-flex justify-content-between align-items-center ai-icon">
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" height="20px" viewBox="0 0 24 24" width="20px" fill="#000000"><path d="M0 0h24v24H0V0z" fill="none" /><path d="M12 6c1.1 0 2 .9 2 2s-.9 2-2 2-2-.9-2-2 .9-2 2-2m0 10c2.7 0 5.8 1.29 6 2H6c.23-.72 3.31-2 6-2m0-12C9.79 4 8 5.79 8 8s1.79 4 4 4 4-1.79 4-4-1.79-4-4-4zm0 10c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" /></svg>
                        <span class="ms-2">History Top up</span>
                    </div>
                </a>
                <a asp-controller="Orders" asp-action="index" class="dropdown-item d-flex justify-content-between align-items-center ai-icon">
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" height="20px" viewBox="0 0 24 24" width="20px" fill="#000000"><path d="M0 0h24v24H0V0z" fill="none" /><path d="M15.55 13c.75 0 1.41-.41 1.75-1.03l3.58-6.49c.37-.66-.11-1.48-.87-1.48H5.21l-.94-2H1v2h2l3.6 7.59-1.35 2.44C4.52 15.37 5.48 17 7 17h12v-2H7l1.1-2h7.45zM6.16 6h12.15l-2.76 5H8.53L6.16 6zM7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zm10 0c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z" /></svg>
                        <span class="ms-2">My Order</span>
                    </div>
                </a>
                <a asp-controller="Books" asp-action="FavoritesList" class="dropdown-item d-flex justify-content-between align-items-center ai-icon">
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" height="20px" viewBox="0 0 24 24" width="20px" fill="#000000"><path d="M0 0h24v24H0V0z" fill="none" /><path d="M16.5 3c-1.74 0-3.41.81-4.5 2.09C10.91 3.81 9.24 3 7.5 3 4.42 3 2 5.42 2 8.5c0 3.78 3.4 6.86 8.55 11.54L12 21.35l1.45-1.32C18.6 15.36 22 12.28 22 8.5 22 5.42 19.58 3 16.5 3zm-4.4 15.55l-.1.1-.1-.1C7.14 14.24 4 11.39 4 8.5 4 6.5 5.5 5 7.5 5c1.54 0 3.04.99 3.57 2.36h1.87C13.46 5.99 14.96 5 16.5 5c2 0 3.5 1.5 3.5 3.5 0 2.89-3.14 5.74-7.9 10.05z" /></svg>
                        <span class="ms-2">Wishlist</span>
                    </div>
                </a>
                <role-access roles="Admin">
                    <a asp-controller="accounts" asp-action="index" class="dropdown-item d-flex justify-content-between align-items-center ai-icon">
                        <div>
                            <svg xmlns="http://www.w3.org/2000/svg" height="20px" viewBox="0 0 24 24" width="20px" fill="#000000"><path d="M0 0h24v24H0V0z" fill="none" /><path d="M16.5 3c-1.74 0-3.41.81-4.5 2.09C10.91 3.81 9.24 3 7.5 3 4.42 3 2 5.42 2 8.5c0 3.78 3.4 6.86 8.55 11.54L12 21.35l1.45-1.32C18.6 15.36 22 12.28 22 8.5 22 5.42 19.58 3 16.5 3zm-4.4 15.55l-.1.1-.1-.1C7.14 14.24 4 11.39 4 8.5 4 6.5 5.5 5 7.5 5c1.54 0 3.04.99 3.57 2.36h1.87C13.46 5.99 14.96 5 16.5 5c2 0 3.5 1.5 3.5 3.5 0 2.89-3.14 5.74-7.9 10.05z" /></svg>
                            <span class="ms-2">Dashboard</span>
                        </div>
                    </a>
                    <a asp-controller="payment" asp-action="index" class="dropdown-item d-flex justify-content-between align-items-center ai-icon">
                        <div>
                            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#000000">
                                <path d="M0 0h24v24H0V0z" fill="none" />
                                <path d="M21 2.01 3 2c-1.1 0-2 .89-2 1.99v16c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V4c0-1.1-.9-1.99-2-1.99zM21 18H3V6h18v12zM7 10h5v2H7zm0 4h7v2H7z" />
                            </svg>
                            <span class="ms-2">Payment history</span>
                        </div>
                    </a>
                    <a asp-controller="FeedbackRequest" asp-action="List" class="dropdown-item d-flex justify-content-between align-items-center ai-icon">
                        <div>
                            <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" fill="#000000" viewBox="0 0 24 24">
                                <path d="M0 0h24v24H0V0z" fill="none" />
                                <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5s-3 1.34-3 3 1.34 3 3 3zM6 9c1.66 0 2.99-1.34 2.99-3S7.66 3 6 3 3 4.34 3 6s1.34 3 3 3zm10 2c-2.33 0-7 1.17-7 3.5V18h14v-2.5c0-2.33-4.67-3.5-7-3.5zM6 11c-2.67 0-8 1.34-8 4v3h8v-3c0-1.1.9-2 2-2h2v-1.5C10 12.17 6.33 11 6 11z" />
                            </svg>
                            <span class="ms-2">Manage Feedback</span>
                        </div>
                    </a>
                    <a asp-controller="RequestAuthor" asp-action="list" class="dropdown-item d-flex justify-content-between align-items-center ai-icon">
                        <div>
                            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#000000">
                                <path d="M0 0h24v24H0V0z" fill="none" />
                                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4S8 5.79 8 8s1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h9.26c-.17-.63-.26-1.3-.26-2 0-1.91.76-3.63 2-4.9C13.31 12.43 12.67 12 12 12zm9.3 3.71l-1.41-1.41L17 19.17l-1.89-1.88-1.41 1.41L17 22l4.3-4.29z" />
                            </svg>
                            <span class="ms-2">Manage Request Author</span>
                        </div>
                    </a>
                </role-access>
                <a asp-controller="auths" asp-action="TopUpCoints" class="dropdown-item d-flex justify-content-between align-items-center ai-icon">
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" height="20px" viewBox="0 0 24 24" width="20px" fill="#000000">
                            <path d="M0 0h24v24H0V0z" fill="none" />
                            <path d="M21 7H5c-1.1 0-2 .9-2 2v9c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V9c0-1.1-.9-2-2-2zm0 11H5V9h16v9zM19 3H7c-1.1 0-2 .9-2 2v2h2V5h12v2h2V5c0-1.1-.9-2-2-2z" />
                        </svg>
                        <span class="ms-2">Top up coins</span>
                    </div>
                </a>
                <a asp-controller="RequestAuthor" asp-action="index" class="dropdown-item d-flex justify-content-between align-items-center ai-icon">
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#000000">
                            <path d="M0 0h24v24H0V0z" fill="none" />
                            <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5s-3 1.34-3 3 1.34 3 3 3zM4 6v2h8V6H4zm0 4v2h6v-2H4zm0 4v2h4v-2H4zm12.94 3.12l1.06 1.06 2.83-2.83-1.06-1.06-1.77 1.77-1.06-1.06-1.06 1.06L16.94 17z" />
                        </svg>
                        <span class="ms-2">Request author to be admin</span>
                    </div>
                </a>
                <a asp-controller="FeedbackRequest" asp-action="index" class="dropdown-item d-flex justify-content-between align-items-center ai-icon">
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#000000">
                            <path d="M0 0h24v24H0z" fill="none" />
                            <path d="M10 17v-4H5l7-7 7 7h-5v4h-4zm-7 2h18v2H3z" />
                        </svg>
                        <span class="ms-2">Feedback to admin </span>
                    </div>
                </a>

                <a asp-controller="Profile" asp-action="ChangePassword" class="dropdown-item d-flex justify-content-between align-items-center ai-icon">
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" height="20px" viewBox="0 0 24 24" width="20px" fill="#000000">
                            <path d="M0 0h24v24H0V0z" fill="none" />
                            <path d="M12 17c1.66 0 2.99-1.34 2.99-3L15 9c0-1.66-1.34-3-3-3S9 7.34 9 9v5c0 1.66 1.34 3 3 3zm6-6v-.99C18 7.79 15.21 5 12 5s-6 2.79-6 6v.99H5v6h14v-6h-1z" />
                        </svg>
                        <span class="ms-2">Change Password</span>
                    </div>
                </a>
            </div>
            <div class="dropdown-footer">
                <a class="btn btn-primary w-100 btnhover btn-sm" id="btnLogout">Log Out</a>
            </div>
        </div>
    </li>
}
