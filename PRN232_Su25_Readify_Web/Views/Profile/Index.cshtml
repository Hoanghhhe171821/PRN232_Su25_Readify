@model PRN232_Su25_Readify_Web.Models.Account.ProfileViewModel

<h2>My Profile</h2>

<div class="card shadow p-4">
    <div class="d-flex align-items-center">
        <img src="@(!string.IsNullOrEmpty(Model.AvatarUrl) ? Model.AvatarUrl : "/images/profile1.jpg")"
             alt="Avatar" width="150" height="150" class="rounded-circle me-4" />

        <div>
            <h2>@Model.UserName</h2>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone:</strong> @Model.PhoneNumber</p>
            <p><strong>Point:</strong> @Model.Points</p>

            @if (Model.IsAuthor)
            {
                <hr />
                <p><strong>📖 Bio:</strong> @Model.Bio</p>
                @if (!string.IsNullOrEmpty(Model.PublicEmail))
                {
                    <p><strong>✉️ Email (công khai):</strong> @Model.PublicEmail</p>
                }
                @if (!string.IsNullOrEmpty(Model.PublicPhone))
                {
                    <p><strong>📱 SĐT (công khai):</strong> @Model.PublicPhone</p>
                }
            }

            <div class="mt-3">
                <a asp-action="Edit" class="btn btn-primary">🖋️ Edit Profile</a>
                <a asp-action="ChangePassword" class="btn btn-warning ms-2">🔐 Đổi mật khẩu</a>
            </div>
        </div>
    </div>
</div>
