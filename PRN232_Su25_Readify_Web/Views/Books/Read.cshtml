    @using PRN232_Su25_Readify_Web.Dtos.Books
    @model ReadViewModel
    @{
        var userId = User.FindFirst("userId")?.Value;
    }
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.min.js"></script>

    <div class="page-content bg-grey">
        <div class="content-inner-1 border-bottom main-content" id="mainContent">
            <div class="container">
                <div class="mt-3 d-flex justify-content-between align-items-center">
                @*TaskBar*@
                    <div>
                        <a class="btn btn-secondary" asp-controller="Books" asp-action="Read"
                        asp-route-bookId="@Model.Book.Id" asp-route-chapterOrder="@(Model.ChapterOrder - 1)"
                        asp-route-userId="@userId">&lt; Back</a>
                        <a class="btn btn-secondary" asp-controller="Books" asp-action="Read" 
                        asp-route-bookId="@Model.Book.Id" asp-route-chapterOrder="@(Model.ChapterOrder + 1)"
                           asp-route-userId="@userId">Next &gt;</a>
                        <a class="btn btn-primary" asp-controller="Books" asp-action="BookDetails"
                        asp-route-bookId="@Model.Book.Id" asp-route-userId="@userId">Home</a>
                    </div>
                    <div>
                        <form class="header-item-search" asp-controller="Books" asp-action="Read" method="get">
                            <input type="hidden" name="bookId" value="@Model.Book.Id" />
                            <input type="hidden" name="userId" value="@userId"/>
                            <div class="input-group search-input">
                                <i class="fas fa-sort-amount-down me-2 text-secondary"></i>
                                <select class="default-select" name="chapterOrder"  onchange="this.form.submit()">
                                    @foreach (var chapter in Model.Chapters)
                                    {
                                        <option value="@chapter.ChapterOrder" selected="@(Model.ChapterOrder == chapter.ChapterOrder)">
                                            Chapter @chapter.ChapterOrder
                                        </option>
                                    }
                                </select>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="title">@Model.Title</h4>
                </div>

                <div class="row">
                    <div class="col-md-12 col-sm-12">
                    @* Khu vực hiển thị PDF*@
                    <div id="pdf-container">

                    </div>
                </div>

                <div class="mt-3 d-flex justify-content-between align-items-center">
                    <div>
                        <a class="btn btn-secondary" asp-controller="Books" asp-action="Read" 
                        asp-route-bookId="@Model.Book.Id" asp-route-chapterOrder="@(Model.ChapterOrder - 1)"
                           asp-route-userId="@userId" >&lt; Back</a>
                        <a class="btn btn-secondary" asp-controller="Books" asp-action="Read" 
                        asp-route-bookId="@Model.Book.Id" asp-route-chapterOrder="@(Model.ChapterOrder + 1)"
                           asp-route-userId="@userId" >Next &gt;</a>
                        <a class="btn btn-primary" asp-controller="Books" asp-action="BookDetails"
                           asp-route-bookId="@Model.Book.Id" asp-route-userId="@userId">Home</a>
                    </div>
                    <div>
                        <form class="header-item-search" asp-controller="Books" asp-action="Read" method="get">
                            <input type="hidden" name="bookId" value="@Model.Book.Id" />
                            <input type="hidden" name="userId" value="@userId" />

                            <div class="input-group search-input">
                                <i class="fas fa-sort-amount-down me-2 text-secondary"></i>
                                <select class="default-select" name="chapterOrder" onchange="this.form.submit()">
                                    @foreach (var chapter in Model.Chapters)
                                    {
                                        <option value="@chapter.ChapterOrder" selected="@(Model.ChapterOrder == chapter.ChapterOrder)">
                                            Chapter @chapter.ChapterOrder
                                        </option>
                                    }
                                </select>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        const url = '@Url.Content(Model.PdfPath)'; // Đường dẫn file PDF

        const container = document.getElementById('pdf-container');

        const renderPDF = async (pdfUrl) => {
            const pdf = await pdfjsLib.getDocument(pdfUrl).promise;
            const totalPages = pdf.numPages;

            for (let pageNum = 1; pageNum <= totalPages; pageNum++) {
                const page = await pdf.getPage(pageNum);

                const canvas = document.createElement('canvas');
                canvas.classList.add('pdf-page');
                const context = canvas.getContext('2d');

                const viewport = page.getViewport({ scale: 1.5 });
                canvas.height = viewport.height;
                canvas.width = viewport.width;

                await page.render({
                    canvasContext: context,
                    viewport: viewport
                }).promise;

                container.appendChild(canvas);
            }
        };

        renderPDF(url);
    </script>
<style>
        #pdf-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
        }

        .pdf-page {
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
            border-radius: 6px;
        }
    .page-content {
        position: relative;
    }

    .menu-toggle {
        position: fixed;
        top: 10px;
        left: 10px;
        z-index: 1000;
        background: #333;
        color: #fff;
        border: none;
        padding: 10px 15px;
        border-radius: 4px;
    }

    .sidebar {
        position: fixed;
        top: 0;
        left: -250px;
        width: 250px;
        height: 100%;
        background: #222;
        color: #fff;
        padding: 20px;
        transition: left 0.3s ease;
        z-index: 999;
    }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

            .sidebar ul li {
                margin: 10px 0;
            }

                .sidebar ul li a {
                    color: #ccc;
                    text-decoration: none;
                }

                    .sidebar ul li a:hover {
                        color: #fff;
                    }

        .sidebar.show {
            left: 0;
        }

    .main-content {
        margin-left: 0;
        transition: margin-left 0.3s ease;
    }

        .main-content.shifted {
            margin-left: 250px;
        }

    .chapter-content {
        background: dimgrey;
        padding: 15px;
        border-radius: 8px;
        white-space: pre-wrap;
        word-wrap: break-word;
        font-size: 1rem;
        color: white;
    }

    .settings label {
        margin-left: 10px;
        font-size: 0.9rem;
        color: #555;
    }
</style>

<script>
    function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        const main = document.getElementById('mainContent');
        sidebar.classList.toggle('show');
        main.classList.toggle('shifted');
    }

    function changeFontSize(size) {
        document.getElementById('chapterContent').style.fontSize = size + 'px';
    }

    function changeTextColor(color) {
        document.getElementById('chapterContent').style.color = color;
    }

    function changeBgColor(color) {
        document.getElementById('chapterContent').style.background = color;
    }

</script>
