@model List<PRN232_Su25_Readify_Web.Models.BookReport.AuthorPendingWarningViewModel>

<h2>Cảnh báo chưa phản hồi</h2>

@if (!Model.Any())
{
    <p>Không có cảnh báo nào cần xử lý.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên sách</th>
                <th>Lý do</th>
                <th>Mô tả</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>@Model[i].BookTitle</td>
                    <td>@Model[i].Reason</td>
                    <td>@Model[i].Description</td>
                    <td>
                        <a asp-action="Warning" asp-route-id="@Model[i].ReportId" class="btn btn-warning btn-sm">Xem chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
