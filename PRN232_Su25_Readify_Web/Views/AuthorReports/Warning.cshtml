@model PRN232_Su25_Readify_Web.Models.BookReport.AuthorReportViewModel
@{
    Layout = "~/Views/Shared/_PartialAuthor.cshtml";
}
<h2>Cảnh báo về sách: @Model.BookTitle</h2>

<p><strong>Lý do:</strong> @Model.Reason</p>
<p><strong>Mô tả:</strong> @Model.Description</p>
<p><strong>Ghi chú của quản lý:</strong> @Model.ManagerNote</p>

<form asp-action="Warning" method="post">
    <input type="hidden" asp-for="ReportId" />
    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="AcceptLock" value="true" checked />
        <label class="form-check-label">Đồng ý khóa sách</label>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="AcceptLock" value="false" />
        <label class="form-check-label">Từ chối khóa sách</label>
    </div>

    <div class="form-group mt-3">
        <label>Lý do từ chối (nếu có)</label>
        <textarea asp-for="DenialReason" class="form-control" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Gửi phản hồi</button>
</form>
