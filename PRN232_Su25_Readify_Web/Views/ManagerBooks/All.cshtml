@using PRN232_Su25_Readify_Web.Models.Book
@using PRN232_Su25_Readify_Web.Models.Common
@model PaginatedWebResponse<ManagerBookListItemViewModel>

@{
    ViewData["Title"] = "Tất cả sách";
    Layout = "~/Views/Shared/_PartialManager.cshtml";
}

<h2 class="mb-4">Tất cả sách</h2>

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
else if (Model.Items.Any())
{
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Tiêu đề</th>
                <th>Tác giả</th>
                <th>Ngày tạo</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model.Items)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.AuthorName</td>
                    <td>@book.CreateDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (!book.IsActive)
                        {
                            <span class="text-danger">Bị khóa</span>
                        }
                        else if (book.IsPublished)
                        {
                            <span class="text-success">Đã xuất bản</span>
                        }
                        else
                        {
                            <span class="text-warning">Chờ duyệt</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.Page == i ? "active" : "")">
                    <a class="page-link" href="?page=@i">@i</a>
                </li>
            }
        </ul>
    </nav>
}
else
{
    <div class="alert alert-info">Không tìm thấy sách phù hợp.</div>
}